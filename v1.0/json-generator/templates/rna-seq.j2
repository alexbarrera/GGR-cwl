    {%  for genome_fasta_file in conf_args.genome_fasta_files %}
        {"class": "File", "path": "{{ genome_fasta_file }}"}{% if not loop.last %},{% endif %}
    {% endfor %}
    ],
    "genomeDirFiles": [
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/Genome"},
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/SA"},
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/SAindex"},
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/chrLength.txt"},
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/chrName.txt"},
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/chrNameLength.txt"},
