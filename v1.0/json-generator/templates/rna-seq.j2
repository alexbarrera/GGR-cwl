        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/genomeParameters.txt"},
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/sjdbInfo.txt"},
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/sjdbList.fromGTF.out.tab"},
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/sjdbList.out.tab"},
        {"class": "File", "path": "{{ conf_args.star_genome_dir }}/transcriptInfo.tab"}
